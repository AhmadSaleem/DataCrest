<h1>Wholesalers</h1>
<% if @wholesalers.present? %>
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="content table-responsive table-full-width">
          <table class="table table-hover table-stripped">
            <thead>
              <th>Wholesaler Name</th>
              <th>Action</th>
            </thead>
            <tbody>
              <% @wholesalers.each do |wholesaler| %>
                <tr>
                  <th><%= wholesaler.full_name %></th>
                  <th><%= link_to "View Applications", dashboard_wholesaler_path(wholesaler) %></th>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <p>No wholesalers found</p>
<% end %>

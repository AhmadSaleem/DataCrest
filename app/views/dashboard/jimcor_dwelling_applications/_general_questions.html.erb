          <%= f.label :policy_number, class: "control-label" %><br>
          <%= f.number_field :policy_number, min: 0, class: "form-control" %>
        </div>
      </div>

      <div class="col-md-5">
        <div class="form-group">
          <%= f.label :policy_period, class: "control-label" %><br>
          <%= f.number_field :policy_period, min: 0, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-10">
        <div class="form-group">
          <%= f.label :applicant_previous_carrier, class: "control-label" %><br>
          <%= f.text_field :applicant_previous_carrier, class: "form-control" %>

<div class="card">
  <div class="card-header">
    <h3>GENERAL QUESTIONS</h3>
  </div>
  <div class="content p-2">
    <div class="row">
      <div class="col-sm-5">
        <div class="form-group">
          <%= f.label :banckrupt, general_questions[:banckrupt_remarks], class: "control-label" %><br>
          <%= f.radio_button :banckrupt, :true %>
          <%= label_tag :banckrupt_yes, "Yes" %>
          <%= f.radio_button :banckrupt, :false %>
          <%= label_tag :banckrupt_no, "No" %>
        </div>
      </div>

      <div class="col-md-5">
        <div class="form-group">
          <%= f.label :banckrupt_remarks, "Remarks", class: "control-label" %><br>
          <%= f.text_field :banckrupt_remarks, class: "form-control" %>
        </div>
      </div>
    </div>
    <hr>


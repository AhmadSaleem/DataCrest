          <%= f.radio_button :unemloyed, :false %>
          <%= label_tag :unemloyed_no, "No" %>
        </div>
      </div>

      <div class="col-md-5">
        <div class="form-group">
          <%= f.label :unemployed_remarks, "Remarks", class: "control-label" %><br>
          <%= f.text_field :unemployed_remarks, class: "form-control" %>

<div class="card">
  <div class="header">
    <h4 class="title">Assign Applications to <%= @agent.full_name.titleize %></h4>
  </div>

  <div class="content">
    <div class="fresh-datatables">
      <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%">
        <thead>
          <tr>
            <th>Title</th>
            <th class="disabled-sorting text-right">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @templates.each do |template| %>
            <tr>
              <td><%= template.title %></td>
              <td class="text-right">
                <%= link_to assign_application_dashboard_agent_wholesaler_application_path(template.id, agent_id: @agent.id), class: 'btn btn-sm btn-primary' do %>
                  Assign
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= content_for :js_init do %>
  Pages.init();
<% end %>

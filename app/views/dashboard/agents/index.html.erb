<h2 class="title">Agents</h2>
<div class="row">
  <div class="col-md-8">
    <% if @agents.present? %>
      <div class="card">
        <div class="content table-responsive table-full-width">
          <table class="table table-hover table-striped">
            <thead>
              <tr>
                <th>Email</th>
                <th>Actions</th>
              </tr>
            </thead>
            <% @agents.each do |agent| %>
              <tbody>
                <tr>
                  <td><%= agent.email %></td>
                  <td><%= link_to "View", dashboard_agent_path(agent) %></td>
                </tr>
              </tbody>
            <% end %>
          </table>
        </div>
      </div>

      <div class="pull-right">
        <%= paginate @agents %>
        <%= page_entries_info @agents, entry_name: "agents" %>
      </div>
    <% else %>
      <p>
        No agents found <%= link_to "Click here", new_dashboard_agent_invitation_path %> to invite agent
      </p>
    <% end %>
  </div>
</div>

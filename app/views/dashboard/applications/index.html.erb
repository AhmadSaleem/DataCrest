<h1>Applications</h1>
<br/>

<% if @wholesaler_applications.present? %>
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="header">
        </div>

        <div class="content table-responsive table-full-width">
          <table class="table table-hover table-stripped">
            <thead>
              <th>Title</th>
              <th>Submitted by</th>
              <th>Status</th>
              <th>Actions</th>
            </thead>

            <tbody>
              <% @wholesaler_applications.each do |wholesaler_application| %>
                <tr>
                  <td><%= wholesaler_application.application_title %></td>
                  <td><%= wholesaler_application.client_full_name %></td>
                  <td><%= wholesaler_application.status %></td>
                  <td>
                    <%= link_to "View", dashboard_application_path(wholesaler_application) %> |
                    <%= link_to "Edit", edit_dashboard_application_path(wholesaler_application) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="pull-right">
        <%= paginate @wholesaler_applications %>
        <%= page_entries_info @wholesaler_applications, entry_name: "applications" %>
      </div>
    </div>
  </div>
<% else %>
  <p>You don't have any applications</p>
<% end %>

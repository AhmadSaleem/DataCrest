<h1 class="title"><%= @application.application_title %></h1>
<br/>

<%= form_for @application, url: dashboard_application_path do |f| %>
  <%= render "shared/errors", resource: @application %>
  <div class="row">
    <div class="col-md-9">
      <div class="card">
        <div class="content">
          <div class="row">
            <div class="col-sm-4">
              <div class="form-group">
                <%= f.label "Update status" %><br/>
                <%= f.select :status, Application.statuses.keys, {}, class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.submit "Update Status", class: "btn btn-success btn-fill" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

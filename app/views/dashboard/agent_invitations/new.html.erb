<%= form_for @agent, url: dashboard_agent_invitations_path do |f| %>
  <div class="row">
    <div class="col-md-10">
      <div class="card">
        <div class="header">
          <h2 class="title">Invite Agent</h2>
        </div>

        <div class="content">
          <div class="row">
            <div class="form-group col-md-5">
              <%= radio_button(:new, :agent, :yes, { required: true, checked: true }) %>
              <%= label_tag :new_agent_yes, 'New Agent' %>
              <%= radio_button(:new, :agent, :no, { required: true }) %>
              <%= label_tag :new_agent_no, 'Existing Agent' %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-3">
              <div class="form-group">
                <%= f.label :first_name, class: "control-label" %>
                <br />
                <%= f.text_field :first_name, class: "form-control", required: true %>
              </div>
            </div>

            <div class="col-md-3">
              <div class="form-group">
                <%= f.label :last_name, class: "control-label" %>
                <br />
                <%= f.text_field :last_name, class: "form-control", required: true %>
              </div>
            </div>

            <div class="col-md-5">
              <div class="form-group">
                <%= f.label :email, class: "control-label" %>
                <br />
                <%= f.text_field :email, class: "form-control", required: true %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="form-group col-md-5">
              <%= label_tag :agent %>
              <%= select_tag "agents", options_from_collection_for_select(@agents, "id", "full_name"), include_blank: true, class: "form-control", required: true %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-3">
              <%= f.submit "Send Invite", class: "btn btn-success" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<h1>Dashboard</h1>
<%= render 'template_charts' %>

<% if agent_signed_in? %>
  <% if @agent_templates.present? %>
    <p>Following applications are assigned to you</p>
    <div class="row">
      <div class="col-md-8">
        <div class="card">
          <div class="content table-responsive table-full-width">
            <table class="table table-hover table-stripped">
              <thead>
                <th>Title</th>
                <th>Action</th>
              </thead>
              <tbody>
                <% @agent_templates.each do |template| %>
                  <th><%= template.title %></th>
                  <th>
                    <%= link_to "View Application", dashboard_template_path(template), class: "btn btn-default btn-fill"%>
                  </th>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>

        <div class="pull-right">
          <%= paginate @agent_templates %>
          <%= page_entries_info @agent_templates, entry_name: "applications" %>
        </div>
      </div>
    </div>
  <% else %>
    <p> You don't have any  assigned applications</p>
  <% end %>
<% end %>

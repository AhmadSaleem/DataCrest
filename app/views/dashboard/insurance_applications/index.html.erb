<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="header">
        <h2 class="title">View Submissions</h2>
      </div>

      <div class="content clearfix">
        <% if @applications.present? %>
          <div class="content table-responsive table-full-width">
            <table class="table table-hover table-stripped">
              <thead>
              <th>Title</th>
              <th>Agent</th>
              <th>Client</th>
              <th>Status</th>
              <th>Actions</th>
              </thead>

              <tbody>
              <% @applications.each do |application| %>
                <tr>
                  <td><%= application.application_title %></td>
                  <td><%= application.agent_name %></td>
                  <td><%= application.client_full_name %></td>
                  <td><%= application.status %></td>
                  <td>
                    <%= link_to "View", dashboard_insurance_applications_jimcor_dwelling_application_path(application) %> |
                    <%= link_to "Edit", edit_dashboard_insurance_application_path(application) %>
                  </td>
              <% end %>
              </tbody>
            </table>
          </div>
          <div class="pull-right">
            <%= paginate @applications %>
            <%= page_entries_info @applications, entry_name: "applications" %>
          </div>
        <% else %>
          <p>You don't have any applications</p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="header">
        <h2 class="title">View Submissions</h2>
      </div>

      <div class="content clearfix">
        <% if @applications.present? %>
          <div class="content table-responsive table-full-width">
            <table class="table table-hover table-stripped">
              <thead>
              <th>Title</th>
              <th>Submitted by</th>
              <th>Status</th>
              <th>Actions</th>
              </thead>

              <tbody>
              <% @applications.each do |application| %>
                 <%= render "#{current_user.class.name.downcase}_insurance_application", application: application %>
              <% end %>
              </tbody>
            </table>
          </div>
          <div class="pull-right">
            <%= paginate @applications %>
            <%= page_entries_info @applications, entry_name: "applications" %>
          </div>
        <% else %>
            <p>You don't have any applications</p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% content_for :form do %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="row session-container">
      <div class="col-md-8">
        <div class="card">
          <div class="header">
            <h2 class="title">Sign up as Wholesaler</h2>
          </div>
          <div class="content">
            <%= render "common_form_fields", f: f %>
            <div class="row">
              <div class="col-sm-12">
                <%= f.fields_for :owned_wholesaler, resource.owned_wholesaler || resource.build_owned_wholesaler  do |wholesaler| %>
                    <%= render 'owned_wholesaler_fields', f: wholesaler %>
                <% end %>
              </div>
            </div>

            <div class="row">
              <div class="col-md-12">
                <div class="alert alert-info">
                  <strong>Note: </strong> If you want to join an existing wholesale company, please ask the owner to invite you.
                </div>
              </div>
            </div>

            <div class="form-group">
              <%= f.submit "Sign up", class: "btn btn-success btn-fill" %>
            </div>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>



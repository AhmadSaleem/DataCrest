<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="row">
    <div class="col-md-6 text-center">
      <h1>Sign up as Wholesaler</h1>
    </div>
  </div>

  <div class="row session-container">
    <div class="col-md-8">
      <div class="card">
        <div class="content">
          <h2 class="header title">Company Information</h2>
          <br/>

          <div class="row">
            <div class="col-sm-12">
              <%= f.fields_for :owned_wholesaler, resource.owned_wholesaler || resource.build_owned_wholesaler  do |wholesaler| %>
                <%= render "shared/user_forms/common_company_fields", f: wholesaler %>
              <% end %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12">
              <div class="alert alert-info">
                <strong>Note: </strong> If you want to join an existing wholesale company, please ask the owner to invite you.
              </div>
            </div>
          </div>

          <h2 class="header title">Account Owner</h2>
          <br/>

          <%= render "common_form_fields", f: f %>

          <div class="form-group">
            <%= f.submit "Sign up", class: "btn btn-success btn-fill" %>
          </div>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% if new_registration? || new_session? %>
  <nav class="navbar navbar-transparent navbar-absolute">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to root_path, class: "navbar-brand " do %>
          <%= image_tag 'site-logo.jpg' %>
        <% end %>
      </div>
      <div class="collapse navbar-collapse">

        <ul class="nav navbar-nav navbar-right">
          <% if new_registration? %>
            <li><%= link_to 'Looking to login?', new_salesperson_session_path %></li>
          <% elsif new_session? %>
              <li class="dropdown">
                <%= link_to "", class: "dropdown-toggle", data: { toggle: "dropdown" } do %>
                    Looking to Register? <b class="caret"></b>
                <% end %>
                <ul class="dropdown-menu">
                  <li><%= link_to "Wholesaler", new_salesperson_registration_path %></li>
                  <li><%= link_to "Agency", new_agent_registration_path %></li>
                </ul>
              </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
<% else %>

  <nav class="navbar navbar-default navbar-fixed">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

        <%= link_to root_path, class: "navbar-brand " do %>
          <%= image_tag 'site-logo.jpg' %>
        <% end %>
      </div>

      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
          <% if signed_in? %>
            <li class="dropdown nav-item">
              <%= link_to "", class: "dropdown-toggle", data: { toggle: "dropdown" } do %>
                <%= current_user.full_name %> <b class="caret"></b>
              <% end %>
              <ul class="dropdown-menu navbar-user-dropdown">
                <div class="row">
                  <div class="col-sm-12 text-center user-info">
                    <p>
                      <strong><%= current_user.full_name %></strong><br>
                      <%= content_tag :span, current_user.email, class: "small" %><br>
                      <%= content_tag :span, current_user.role, class: "small" %>
                    </p>
                  </div>
                </div>

                <div class="list-group">
                  <%= link_to "My Dashboard", dashboard_path, class: "list-group-item" %>
                  <%= link_to "Logout", render_logout_path, class: "list-group-item", method: :delete %>
                </div>
              </ul>
            </li>
          <% else %>
            <li class="dropdown">
              <%= link_to "", class: "dropdown-toggle", data: { toggle: "dropdown" } do %>
                Sign up <b class="caret"></b>
              <% end %>
              <ul class="dropdown-menu">
                <li><%= link_to "Wholesaler", new_salesperson_registration_path %></li>
                <li><%= link_to "Agency", new_agent_registration_path %></li>
              </ul>
            </li>

            <li class="dropdown">
              <%= link_to "", class: "dropdown-toggle", data: { toggle: "dropdown" } do %>
                Login <b class="caret"></b>
              <% end %>
              <ul class="dropdown-menu">
                <li><%= link_to "Salesperson", new_salesperson_session_path %></li>
                <li><%= link_to "Agent", new_agent_session_path %></li>
                <li><%= link_to "Client", new_client_session_path %></li>
              </ul>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
<% end %>